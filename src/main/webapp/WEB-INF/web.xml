<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
	<display-name>Archetype Created Web Application</display-name>

	<!-- 定义业务层的spring容器配置文件 -->
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>classpath:/applicationContext.xml</param-value>
	</context-param>
	<!-- ContextLoaderListener根据contextConfigLocation指定的业务层spring配置文件启动业务层spring容器（父容器） -->
	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>
	<!-- 声明DispatcherServlet，默认加载classpath下面的<servlet-name>-servlet.xml的spring配置文件，启动web层spring容器（子容器） -->
	<servlet>
		<servlet-name>asiainfo</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<!-- 指定servlet映射，即某个servlet所拦截哪些url -->
	<servlet-mapping>
		<servlet-name>asiainfo</servlet-name>
		<url-pattern>*.html</url-pattern>
	</servlet-mapping>
</web-app>